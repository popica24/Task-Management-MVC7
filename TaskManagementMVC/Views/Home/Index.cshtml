@model IEnumerable<ProjectModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="style.css">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="row py-5">
            <div class="col-md-6">
                <div class="about-container position-fixed">
                    <div class="d-flex flex-column justify-content-between"
                         style="height: 90vh">
                        <div class="text-container w-100">
                            <div class="text-wrapper">
                                <h1>Popescu Andrei</h1>
                                <h2>Entry-Level .NET Developer</h2>
                                <p>Inclusive Full Stack .NET Developer</p>
                                <p>Crafting accessible web experiences.</p>
                            </div>
                            <div class="btn-list py-5 w-50">
                                <ul>
                                    <li class="list-group-item d-flex justify-content-between align-items-start border-bottom my-2">
                                        <div class="me-auto">
                                            <div>About</div>
                                        </div>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-start border-bottom my-2">
                                        <div class="me-auto">
                                            <div>Education</div>
                                        </div>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-start border-bottom my-2">
                                        <div class="me-auto">
                                            <div>Experience</div>
                                        </div>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-start border-bottom my-2">
                                        <div class="me-auto">
                                            <div>Projects</div>
                                        </div>
                                        <span class="badge bg-primary rounded-pill">15</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="contact-wrapper">
                            <div class="d-flex flex-row">
                                <a class="m-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                                        <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z" />
                                    </svg>
                                </a>
                                <a class="m-2">
                                    <span>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-github" viewBox="0 0 16 16">
                                            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z" />
                                        </svg>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="tech-container">
                    <div class="desc-text border-bottom">
                        <p>
                            Hello there! I'm Andrew, a passionate junior web developer eager
                            to make my mark in the digital world. While my heart beats for
                            coding and creating captivating websites, my soul is equally
                            fueled by my love for music, fashion, and architecture.
                        </p>
                        <p>
                            Fashion and architecture are my other sources of fascination. I
                            believe that design transcends screens and pixels, and I draw
                            inspiration from the structural wonders of architecture and the
                            artistry of fashion. These diverse interests shape my approach
                            to web development, enabling me to create visually stunning and
                            user-friendly designs.
                        </p>
                        <p>
                            I thrive in collaborative environments, embracing challenges as
                            stepping stones to growth. With my geeky sense of humor and an
                            unyielding commitment to personal and professional development,
                            I bring a unique blend of enthusiasm and expertise to every
                            project. If you're looking for a passionate and versatile junior
                            web developer who can infuse their work with a fresh perspective
                            and a touch of creativity, look no further—I'm here to make a
                            difference.
                        </p>
                    </div>
                    <div class="experience-container">
                        <div class="model-box py-2">
                            <div class="row">
                                <div class="col-4">
                                    <div class="text-period px-2">
                                        2023-Present
                                    </div>
                                </div>
                                <div class="col-8">
                                    <div class="d-flex flex-column">
                                        <span>Technical Trainer · Logiscool</span>
                                        <span>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Quae quo dolorum accusantium placeat architecto porro nisi quasi nesciunt vel, rem, dolorem fuga. Dolorem aliquid, sed enim adipisci dignissimos voluptatum porro.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="model-box py-2 border-bottom">
                            <div class="row">
                                <div class="col-4">
                                    <div class="text-period px-2">
                                        2020-Present
                                    </div>
                                </div>
                                <div class="col-8 ">
                                    <div class="d-flex flex-column">
                                        <span>Freelancing · Home</span>
                                        <span>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Quae quo dolorum accusantium placeat architecto porro nisi quasi nesciunt vel, rem, dolorem fuga. Dolorem aliquid, sed enim adipisci dignissimos voluptatum porro.</span>
                                        <div class="tags">
                                            <span class="badge rounded-pill text-bg-info">HTML</span>
                                            <span class="badge rounded-pill text-bg-info">CSS</span>
                                            <span class="badge rounded-pill text-bg-info">JS</span>
                                            <span class="badge rounded-pill text-bg-info">.NET</span>
                                            <span class="badge rounded-pill text-bg-info">C#</span>
                                            <span class="badge rounded-pill text-bg-info">ASP.NET</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="project-container">
                    @foreach(var m in Model)
                    {
                              <div class="model-box py-2">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="text-period px-2">
                                           @m.Created
                                        </div>
                                    </div>
                                    <div class="col-8">
                                        <div class="d-flex flex-column">
                                            <span>@m.Title</span>
                                            <span>@m.Description</span>
                                               <p><a class="link-offset-2 link-underline link-underline-opacity-25" href="@m.Link" target="_blank">GitHub Repository</a></p>
                                            <div class="tags">
                                            @switch (m.Status)
                                            {
                                                case TaskManagementMVC.Models.Enums.Status.Planning:
                                                    <span class="badge rounded-pill text-bg-secondary">@m.Status</span>
                                                    break;
                                                case TaskManagementMVC.Models.Enums.Status.InProcess:
                                                    <span class="badge rounded-pill text-bg-warning">@m.Status</span>
                                                    break;
                                                case TaskManagementMVC.Models.Enums.Status.Completed:
                                                    <span class="badge rounded-pill text-bg-success">@m.Status</span>
                                                    break;
                                            }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
</body>
</html>
